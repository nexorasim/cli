
{
  "displayName": "High 5xx Error Rate on esim-myanmar-backend",
  "combiner": "OR",
  "conditions": [
    {
      "displayName": "HTTP Server Errors (5xx) over 1%",
      "conditionThreshold": {
        "filter": "metric.type=\"run.googleapis.com/request_count\" resource.type=\"cloud_run_revision\" resource.label.service_name=\"esim-myanmar-backend\" metric.label.response_code_class=\"5xx\"",
        "comparison": "COMPARISON_GT",
        "thresholdValue": 0.01,
        "duration": "300s",
        "trigger": {
            "count": 1
        },
        "aggregations": [
          {
            "alignmentPeriod": "60s",
            "perSeriesAligner": "ALIGN_RATE"
          }
        ]
      }
    }
  ],
  "notificationChannels": [],
  "documentation": {
    "content": "The esim-myanmar-backend service is experiencing a high rate of 5xx server errors. Please investigate the logs in Google Cloud Logging immediately.",
    "mimeType": "text/markdown"
  },
  "userLabels": {}
}
